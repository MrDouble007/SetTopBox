<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="170dp"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/icon_dialog_title" />

    <TextView
        android:id="@+id/tv_tip_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space20"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:textColor="@color/colorDialogTitle"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/rectangle_shape_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_tip_confirm"
            style="@style/TextStyleBigGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorDialogButton"
            android:gravity="center" />

        <Button
            android:id="@+id/bt_tip_cancel"
            style="@style/TextStyleBigGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space10"
            android:layout_weight="1"
            android:background="@color/colorDialogButton"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
